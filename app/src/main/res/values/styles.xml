<resources>
    <style name="Base.Theme.FoodPlannerApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.FoodPlannerApplication" parent="Base.Theme.FoodPlannerApplication" />

    <style name="Theme.FoodPlannerApplication.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.FoodPlannerApplication.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.FoodPlannerApplication.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <!-- Custom dialog style -->
    <style name="CustomDialog" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="backgroundColor">@android:color/white</item> <!-- Background color of the dialog -->
        <item name="android:textColorPrimary">@android:color/black</item> <!-- Text color -->
        <item name="android:padding">16dp</item> <!-- Padding inside the dialog -->
        <item name="android:windowMinWidthMajor">80%</item> <!-- Minimum width of the dialog -->
        <item name="android:windowMinWidthMinor">80%</item> <!-- Minimum width of the dialog -->
        <item name="android:layout_margin">24dp</item> <!-- Margin around the dialog -->
    </style>




</resources>